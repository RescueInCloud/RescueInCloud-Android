
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    android:dividerPadding="8dp"
    android:background="@drawable/box_background"
    android:padding="10dp"
	android:layout_margin="5dp"    
    android:gravity="center">

    <TextView
        android:id="@+id/contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="Una pregunta cualquiera y con mucho blablabla cualquiera"
        android:textColor="@color/color_blanco"
        android:textSize="20sp" />
        
        <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:padding="5dp">

        <Button
            android:id="@+id/buttonSi"
            style="@style/Circle_button_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="SÃ­" />

        <Button
            android:id="@+id/buttonNo"
            style="@style/Circle_button_style"
            android:layout_alignBaseline="@+id/buttonSi"
            android:layout_alignBottom="@+id/buttonSi"
            android:layout_alignParentRight="true"
            android:text="No" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonContinuar"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:background="@drawable/rounded_button_item"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="Continuar"
            android:textColor="@color/circle_button_text_color" />

</LinearLayout>
